				</div>
			</div>
	  	</div>
		<!-- content-->
		<!-- 新規登録モーダル -->
		<div class="modal fade" id="signup" tabindex="-1" role="dialog" aria-labelledby="signup" aria-hidden="true">
		<div class="modal-dialog">
	        <div class="modal-content">
	          <div class="modal-header">
	            <h4 class="modal-title" id="myModalLabel">新規ユーザ登録</h4>
	            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fas fa-times"></i></button>
	          </div>
	          <div class="modal-body">
	            <div class="form-body">
	              <div class="form-error"></div>
	              <p>ユーザー名</p>
	                <input name="name">
	              <p>メールアドレス</p>
	                <input name="email">
	              <p>パスワード</p>
	                <input type="password" name="password">
	            </div>
	          </div>
	          <div class="modal-footer">
	            <input class="btn btn-success signup-btn" type="submit" value="アカウント作成">
	          </div>
	        </div>
	      </div>
	    </div>
	    <!-- 新規登録モーダル -->
	    <!-- ログインモーダル -->
		<div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="login" aria-hidden="true">
		<div class="modal-dialog">
	        <div class="modal-content">
	          	<div class="modal-header">
	            	<h4 class="modal-title" id="myModalLabel">ログイン</h4>
	            	<button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fas fa-times"></i></button>
	          	</div>
	         	<div class="modal-body">
	            	<div class="form-body">
	             		<div class="form-error"></div>
	              		<p>メールアドレス</p>
	                	<input name="email">
	              		<p>パスワード</p>
	                	<input type="password" name="password">
	            	</div>
	          	</div>
	          	<div class="modal-footer">
	          		<input class="btn btn-success login-btn" type="submit" value="ログイン">
	          	</div>
	        </div>
	    </div>
		</div>
		<!-- ログインモーダル -->

	<script src="/javascripts/vertical-timeline-js/main.js"></script> <!-- Resource JavaScript --> 
	<script src="/javascripts/bootstrap_js/popper.min.js"></script>
	<script src="/javascripts/bootstrap_js/bootstrap.min.js"></script>
	</body>
</html>
