			</div>
		</section> <!-- cd-timeline -->

		<!-- content-->
		<div class="contents">
			<div class="container-fluid">
				<div class="row">
			    <div class="content col-lg-6 col-md-6">
						<h3>Book</h3>
			      <p><i class="fas fa-book-reader"></i></p>
						<a href="#">Readlog</a>
			    </div>
